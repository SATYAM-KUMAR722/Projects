<% layout('layouts/boilerplate') %>

<style>
.filters{
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.filter{
    display: flex;
    margin-top: 2rem;
    text-align: center;
    opacity: .7;
}

.filter:hover{
    opacity: 1;
    cursor: pointer;
}

.filter p{
    font-size: .8rem;
}

.tax-info{
    display: none;
}

.tax-toggle{
    display: flex;
    align-items: center;
    border: .1px solid rgb(33, 33, 33);
    border-radius: 1rem;
    height: 3rem;
    padding: 1rem;
    margin-top: .8rem;
    margin-left: 3rem;
}

</style>

<body>
    <div class="filters">
        <div class="row filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>

         <div class="row filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
         <div class="row filter">
            <div><i class="fa-solid fa-mountain-city"></i></i></div>
            <p>Iconic Cities</p>
        </div>

         <div class="row filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountain</p>
        </div>
         <div class="row filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castels </p>
        </div>

         <div class="row filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farm</p>
        </div>
         <div class="row filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountain</p>
        </div>
         <div class="row filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping </p>
        </div>

         <div class="row filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Artic</p>
        </div>

        <div class="row filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Domes</p>
        </div>
         <div class="row filter">
            <div><i class="fa-solid fa-ship"></i></div>
            <p>Boats</p>
        </div>

        <div class="tax-toggle">
             <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display Taxes</label>
             </div>
        </div>

    </div>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of Allistdata) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="col">
                <div class="listing-card" style="width: 14rem;">
                    <img class="card-img-top" src="<%= listing.image.url %>" alt="Card image cap" style="height: 20rem; width: 10rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <%= listing.title %> <br/>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                            <i class="tax-info">&nbsp;&nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
            </div>
        </a>
    <% } %>
</div>
<script>
    let taxSwitch = document.getElementById("flexSwitchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let tax_info = document.getElementsByClassName("tax-info");
        for(let info of tax_info) {
            if(info.style.display !== "inline") {
                info.style.display = "inline"
            } else {
                info.style.display = "none"
            }
        }
    })
</script>
</body>