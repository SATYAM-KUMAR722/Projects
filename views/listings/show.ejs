<% layout("/layouts/boilerplate") %>

    <body>

        <div class="row mt-3">
            <div class="col-6 offset-3">
                <h3>
                    <%= listing.title %>
                </h3>
            </div>

            <div class="col-6 offset-3">
                <div class="listing-card">
                    <img class="card-img-top show-img" src="<%= listing.image.url%>" alt="Card_image ">
                    <div class="card-body">
                              <p class="card-text"> Owner is <i> <%= listing.owner.username %> </i></p>
                              <p class="card-text">  <%= listing.description %></p>
                              <p class="card-text">  &#x20B9; <%= listing.price.toLocaleString("en-IN") %></p>
                              <p class="card-text">  <%= listing.location %></p>
                              <p class="card-text">  <%= listing.country %></p>     
                    </div>
                </div>
            </div>

           <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
            <div class="btns offset-3">
                <a href="http://localhost:8080/listings/<%= listing.id %>/edit"
                    class="btn btn-dark col-1 edit-btn ">Edit</a>

                <form method="POST" action="/listings/<%= listing.id %>?_method=DELETE">
                    <button class="btn btn-dark offset-3">Delete</button>
                </form>
            </div>
             <% } %>
          
            <% if(currentUser) { %>
            <div class="col-6 offset-3">
                <br>
                <h4>Review</h4>
                <form method="POST" action="/listings/<%= listing.id %>/reviews" novalidate class="needs-validation">
                    <div class="mt-3 mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" min="1" max="5" name="review[rating]" class="form-range">
                    </div>
                    <div class="mt-3 mb-3">
                        <label for="comment" class="form-label">Comment</label>
                        <textarea name="review[comment]" cols="30" rows="5" id="" class="form-control"
                            required></textarea>
                        <div class="invalid-feedback">Give some review!</div>
                    </div>
                    <button class="btn btn-outline-dark mb-2">Submit</button>
                </form>
            </div>
             <% } %>
            <hr>

            <% if(listing.reviews.length > 0) { %>
            <div class="row col-8 offset-3">
                <p class="offset-3"><b>All Reviews</b></p>
                <% for(let review of listing.reviews) { %>
                    <div class="card col-5 mb-3 ms-2">
                        <div class="card-body">
                            <h5 class="card-text">@<%= review.author.username %></h5>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> Stars
                            </p>
                            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-2">
                                <button class="btn btn-dark">Delete</button>
                            </form>
                        </div>
                    </div>
                    <% } %>
            </div>
            <% } %>

          
        </div>
    </body>